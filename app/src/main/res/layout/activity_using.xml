<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화장실 이용 중..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_bigtissue"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"/>


    <ImageView
        android:id="@+id/iv_bigtissue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/big_tissue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>


    <ImageView
        android:id="@+id/iv_downarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/down_arrow"
        app:layout_constraintTop_toBottomOf="@id/iv_bigtissue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/iv_downarrow_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/down_arrow_bold"
        app:layout_constraintTop_toBottomOf="@id/iv_downarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_areyouboring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혹시 심심하신가요..?"
        app:layout_constraintTop_toBottomOf="@id/iv_downarrow_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>




    <Button
        android:id="@+id/btn_game"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:text="게임하러가기"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#495057"
        app:layout_constraintTop_toBottomOf="@id/tv_areyouboring"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_filllightgray_nostroke"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_end"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_signup_duplicheck"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom"
        android:textColor="@color/white"
        android:outlineProvider="none"
        android:text="이용종료"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>