<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="16dp"
    android:background="@drawable/shape_qr_dialog">

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tissueTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/tissueimg"
            android:text="200p"
            android:gravity="center"
            android:textColor="@color/chamma_main"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="31dp"
            android:text="200포인트가 차감됩니다.\n     결제를 하실건가요?"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="11dp">

            <Button
                android:id="@+id/btn_post_edit_back_cancel"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_qr_dialog_gray"
                android:text="참을래요"
                android:textColor="@color/chamma_signup_textgray" />

            <Button
                android:id="@+id/btn_post_edit_back_ok"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_qr_dialog_blue"
                android:text="이용할래요"

                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>